<Window x:Class="NV.DetectionPlatform.UCtrls.WndPreheat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="预热" Height="250" Width="600" Style="{DynamicResource WindowStyle}" WindowStartupLocation="CenterScreen">
    <Window.Resources>
    </Window.Resources>
    <Grid Background="{DynamicResource LightGrayBG}">
        <GroupBox Header="预热" Grid.Row="1" Grid.Column="0" BorderBrush="DimGray" Margin="5" BorderThickness="1">
            <Grid x:Name="ugd" Margin="5">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
                        <Setter Property="MinHeight" Value="30"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="304*"/>
                    <ColumnDefinition Width="205*"/>
                    <ColumnDefinition Width="59*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <TextBlock>
                        <Run Text="此窗口预热完成后会自动关闭" />
                        <Run x:Name="runPreheatTime" Text=""/>
                        <Run Text=""/>
                    </TextBlock>
                    <Viewbox Stretch="Uniform" Grid.Row="1" Margin="10">
                        <TextBlock Text="00:00" x:Name="tbTimeSpan"/>
                    </Viewbox>
                    <TextBlock  Grid.Row="2" TextTrimming="CharacterEllipsis" >
                        <Run Text="Step:"/>
                        <Run Text="--" x:Name="runState"/>
                    </TextBlock>
                </Grid>

                <GridSplitter Grid.Column="0" Width="2" Background="#FF686868" IsEnabled="False">
                    <GridSplitter.Effect>
                        <DropShadowEffect ShadowDepth="1" Color="Gray"/>
                    </GridSplitter.Effect>
                </GridSplitter>

                <Grid Grid.Column="1" Margin="0,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
